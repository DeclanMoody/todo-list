<h1><%= @todo.name%></h1>

<%= link_to "edit", edit_todo_path(@todo), :class => "waves-effect waves-light btn" %>
<%= link_to "Done", todo_path(@todo), :method => :completed, :class => "waves-effect waves-light btn" %>
<%= link_to "delete", todo_path(@todo), :data => { :confirm => "Are you sure you want to delete?", :method => :delete}, :class => "waves-effect waves-light btn red" %>
